    s = 1; c = [0,0] % s = length of side, c = center
    clf; axis([c(1)-s/2,c(1)+s/2,c(2)-s/2,c(2)+s/2,],'equal');
    title(sprintf('Sierpinski'))
    hold on;
    sier(depth, s, c);
    hold off;
end
